<h1>Personas</h1>

<p>
  <strong>Promedio de edad:</strong>
  <%= Persona.promedio_edad %> a√±os
</p>

<!-- Modifico este archivo para que los resultados se vean en forma de tabla -->
<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Fecha de Nacimiento</th>
      <th>DNI</th>
      <th>Edad</th>
    </tr>
  </thead>

  <tbody>
    <% @personas.each do |persona| %>
      <tr>
        <td><%= persona.nombre %></td>
        <td><%= persona.apellido %></td>
        <td><%= persona.fecha_nacimiento %></td>
        <td><%= persona.nro_dni %></td>
        <td><%= persona.edad %></td>
        <td><%= link_to 'Ver', persona %></td>
        <td><%= link_to 'Editar', edit_persona_path(persona) %></td>
        <td><%= link_to 'Eliminar', persona, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<div class="new_persona">
  <%= link_to 'Nueva Persona', new_persona_path, class: "button" %>
</div>